/*		Verification SQL		*/

select tabschema, tabname, colname, typename, length, scale, nulls, identity 
from syscat.columns where tabname in ('ICE_STAGE_FACTOR') and tabschema in ('GICROP02', 'GICROP03')
and colname in ('TYPECODE','PRACTICE','HARVEST_COST')
;

select tabschema, tabname, colname, typename, length, scale, nulls, identity 
from syscat.columns where tabname in ('ICE_MAX_REPLANT_GUAR_PERACRE_ERROR') and tabschema in ('GICROP02', 'GICROP03')
and colname in ('COUNTY','PRACTICE','IRRIGATION_PRACTICE'
,'CROPPING_PRACTICE','ORGANIC_PRACTICE','INTERVAL','CROPYEAR')
;


/*      	Add Columns 		      */

ALTER TABLE GICROP02.ICE_STAGE_FACTOR
  ADD COLUMN TYPECODE	CHARACTER(3);

ALTER TABLE GICROP02.ICE_STAGE_FACTOR
  ADD COLUMN PRACTICE	CHARACTER(3);

ALTER TABLE GICROP02.ICE_STAGE_FACTOR
  ADD COLUMN HARVEST_COST   DECIMAL(9, 4);

COMMENT ON GICROP02.ICE_STAGE_FACTOR ( 
	TYPECODE IS 'TPS-19298-002',
	PRACTICE IS 'TPS-19298-002',
	HARVEST_COST IS 'TPS-19298-002');
COMMIT;

ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN COUNTY	CHARACTER(3);

ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN PRACTICE	CHARACTER(3);

ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN IRRIGATION_PRACTICE   CHARACTER(3);
  
ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN CROPPING_PRACTICE	CHARACTER(3);
  
ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN ORGANIC_PRACTICE	CHARACTER(3);
  
ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN INTERVAL	CHARACTER(3);
  
ALTER TABLE GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR
  ADD COLUMN CROPYEAR	SMALLINT;

COMMENT ON GICROP02.ICE_MAX_REPLANT_GUAR_PERACRE_ERROR ( 
	COUNTY IS 'TPS-19298-002',
	PRACTICE IS 'TPS-19298-002',
	IRRIGATION_PRACTICE IS 'TPS-19298-002',
	CROPPING_PRACTICE IS 'TPS-19298-002',
	ORGANIC_PRACTICE IS 'TPS-19298-002',
	INTERVAL IS 'TPS-19298-002',
	CROPYEAR IS 'TPS-19298-002');
COMMIT;
